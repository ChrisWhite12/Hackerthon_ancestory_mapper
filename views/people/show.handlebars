<section class="hero is-fullheight is-light is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">
                You have added the following person:
            </h1>
            <p><strong>{{ firstName }} {{ middleName }} {{ lastName }}</strong></p>
            <p><strong>DOB: </strong>{{ DOB }}</p>
            <p><strong>Place of Birth: </strong>{{ birthCity}} {{ birthState }}, {{ birthCountry }}</p>
            <a href="/people/{{id}}/edit" class="button is-link is-outlined">Edit</a>
        </div>
    </div>
</section>